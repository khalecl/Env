    <script>
        let responses = {};
        let totalQuestions = 13;
        let currentTab = 'baseline';

        const correctAnswers = {
            'baseline_quality': 'poor',        // Data is clearly inadequate
            'main_issue': 'all',               // All issues are present
            'impact_assessment': 'inadequate', // Very superficial assessment
            'cumulative_impact': 'no',         // Not addressed at all
            'methodology': 'missing',          // No clear methodology
            'mitigation_quality': 'weak',      // All generic statements
            'implementability': 'no',          // Nothing is measurable
            'consultation_quality': 'poor',    // Multiple serious issues
            'public_participation': 'inadequate', // Poor process
            'final_decision': 'revise',        // Major revisions needed
            'priority_fix': 'baseline',        // Baseline data is critical foundation
            'current_approval': 'no',          // Cannot approve as is
            'timeline': 'long'                 // Needs comprehensive redo
        };

        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            // Remove active class from all tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            // Show selected tab content
            document.getElementById(tabName).classList.add('active');
            // Add active class to clicked tab
            event.target.classList.add('active');
            currentTab = tabName;
        }

        function selectOption(question, option, button) {
            // Remove selection from siblings
            button.parentNode.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            // Add selection to clicked button
            button.classList.add('selected');
            
            // Store response
            responses[question] = option;
            
            // Update progress
            updateProgress();
            
            // Check if all questions answered
            if (Object.keys(responses).length === totalQuestions) {
                document.getElementById('submitBtn').disabled = false;
                document.getElementById('submitBtn').classList.add('pulse');
            }
        }

        function updateProgress() {
            const progress = (Object.keys(responses).length / totalQuestions) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('progressText').textContent = Math.round(progress) + '% مكتمل';
        }

        function calculateResults() {
            let overallScore = 0;
            let technicalScore = 0;
            let professionalScore = 0;
            let incorrectAnswers = [];

            // Technical questions (baseline, impacts, mitigation)
            const technicalQuestions = ['baseline_quality', 'main_issue', 'impact_assessment', 'cumulative_impact', 'methodology', 'mitigation_quality', 'implementability'];
            
            // Professional questions (consultation, decision-making)
            const professionalQuestions = ['consultation_quality', 'public_participation', 'final_decision', 'priority_fix', 'current_approval', 'timeline'];

            let technicalCorrect = 0;
            let professionalCorrect = 0;

            for (let question in correctAnswers) {
                const isCorrect = responses[question] === correctAnswers[question];
                
                if (isCorrect) {
                    overallScore += 100 / totalQuestions;
                    if (technicalQuestions.includes(question)) {
                        technicalCorrect++;
                    } else if (professionalQuestions.includes(question)) {
                        professionalCorrect++;
                    }
                } else {
                    incorrectAnswers.push({
                        question: question,
                        userAnswer: responses[question],
                        correctAnswer: correctAnswers[question]
                    });
                }
            }

            technicalScore = (technicalCorrect / technicalQuestions.length) * 100;
            professionalScore = (professionalCorrect / professionalQuestions.length) * 100;

            displayResults(Math.round(overallScore), Math.round(technicalScore), Math.round(professionalScore), incorrectAnswers);
        }

        function displayResults(overall, technical, professional, incorrectAnswers) {
            const resultsDiv = document.getElementById('results');
            const resultTitle = document.getElementById('resultTitle');
            const feedbackDiv = document.getElementById('feedback');

            resultsDiv.style.display = 'block';
            resultsDiv.scrollIntoView({ behavior: 'smooth' });

            // Animate scores
            animateScore('overallScore', overall);
            animateScore('technicalScore', technical);
            animateScore('professionalScore', professional);

            // Set title based on overall performance
            if (overall >= 85) {
                resultTitle.textContent = '🌟 ممتاز! مراجع بيئي محترف متمكن';
            } else if (overall >= 70) {
                resultTitle.textContent = '👍 جيد جداً! فهم صحيح للمعايير البيئية';
            } else if (overall >= 50) {
                resultTitle.textContent = '⚠️ متوسط! يحتاج تطوير المهارات المهنية';
            } else {
                resultTitle.textContent = '🔄 يحتاج تدريب إضافي مكثف في مراجعة EIA';
            }

            // Generate comprehensive feedback
            let feedbackHTML = generateDetailedFeedback(overall, technical, professional, incorrectAnswers);
            feedbackDiv.innerHTML = feedbackHTML;
        }

        function animateScore(elementId, targetScore) {
            const element = document.getElementById(elementId);
            let currentScore = 0;
            const increment = targetScore / 50;

            // Set color based on score
            element.classList.remove('score-excellent', 'score-good', 'score-average', 'score-poor');
            if (targetScore >= 80) {
                element.classList.add('score-excellent');
            } else if (targetScore >= 60) {
                element.classList.add('score-good');
            } else if (targetScore >= 40) {
                element.classList.add('score-average');
            } else {
                element.classList.add('score-poor');
            }

            const animation = setInterval(() => {
                currentScore += increment;
                if (currentScore >= targetScore) {
                    currentScore = targetScore;
                    clearInterval(animation);
                }
                element.textContent = Math.round(currentScore) + '%';
            }, 20);
        }

        function generateDetailedFeedback(overall, technical, professional, incorrectAnswers) {
            let feedback = `
                <h4>📊 تحليل الأداء التفصيلي:</h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin: 20px 0;">
                    <div style="text-align: center; padding: 15px; background: #f8f9fa; border-radius: 10px;">
                        <strong>النتيجة الإجمالية</strong><br><span style="font-size: 24px; color: #2c3e50;">${overall}%</span>
                    </div>
                    <div style="text-align: center; padding: 15px; background: #f8f9fa; border-radius: 10px;">
                        <strong>التقييم التقني</strong><br><span style="font-size: 24px; color: #2c3e50;">${technical}%</span>
                    </div>
                    <div style="text-align: center; padding: 15px; background: #f8f9fa; border-radius: 10px;">
                        <strong>المهنية</strong><br><span style="font-size: 24px; color: #2c3e50;">${professional}%</span>
                    </div>
                </div>
            `;

            // Professional assessment based on correct answer
            feedback += `
                <div class="recommendation-box">
                    <h4>🎯 التقييم المهني الصحيح:</h4>
                    <p><strong>القرار الصحيح: إرجاع للتعديل الجذري</strong></p>
                    <p>هذه الدراسة تعاني من نواقص جوهرية في جميع الجوانب وتحتاج إعادة إعداد شاملة تستغرق 6-12 شهر.</p>
                    <p><strong>السبب:</strong> لا يمكن لأي مراجع بيئي محترف الموافقة على مشروع بهذا الحجم مع دراسة بهذا المستوى الضعيف.</p>
                </div>
            `;

            // Major deficiencies
            feedback += `
                <h4>🚨 النواقص الرئيسية المحددة:</h4>
                <div class="deficiency-list">
                    <div class="deficiency-item">
                        <strong>📊 البيانات الأساسية:</strong><br>
                        • بيانات قديمة ومن مصادر غير موثقة<br>
                        • تغطية ناقصة وفترات قصيرة (3 أشهر فقط!)<br>
                        • منهجية غير علمية ومسح سطحي
                    </div>
                    <div class="deficiency-item">
                        <strong>⚡ تقييم التأثيرات:</strong><br>
                        • تقييم سطحي وعام بدون أرقام<br>
                        • تجاهل كامل للتأثيرات التراكمية<br>
                        • لا توجد مصفوفة تأثير أو منهجية واضحة
                    </div>
                    <div class="deficiency-item">
                        <strong>🛡️ تدابير التخفيف:</strong><br>
                        • عبارات عامة غير محددة أو قابلة للقياس<br>
                        • غير قابلة للتطبيق أو المراقبة<br>
                        • بدون تكاليف أو جداول زمنية أو مسؤوليات
                    </div>
                    <div class="deficiency-item">
                        <strong>👥 الاستشارة العامة:</strong><br>
                        • إعلان متأخر (5 أيام فقط)<br>
                        • مكان وتوقيت غير مناسبين<br>
                        • مشاركة شكلية غير فعالة (8 أشخاص فقط!)
                    </div>
                </div>
            `;

            if (incorrectAnswers.length > 0) {
                feedback += '<h4>🔍 مراجعة الإجابات الخاطئة:</h4>';
                incorrectAnswers.forEach(error => {
                    feedback += generateSpecificFeedback(error);
                });
            }

            feedback += `
                <div class="recommendation-box">
                    <h4>📝 المتطلبات الأساسية للموافقة:</h4>
                    <ol style="text-align: right; margin: 15px 0; line-height: 1.8;">
                        <li><strong>بيانات أساسية جديدة وشاملة:</strong> مسح لمدة 12 شهر كامل يغطي جميع المواسم</li>
                        <li><strong>تقييم تأثيرات متقدم:</strong> مصفوفة ليوبولد + تحليل كمي + نمذجة رياضية</li>
                        <li><strong>تدابير تخفيف محددة:</strong> إجراءات قابلة للقياس والمراقبة مع تكاليف وجداول زمنية</li>
                        <li><strong>استشارة عامة حقيقية:</strong> وفقاً لمعايير هيئة البيئة مع فترة كافية ومشاركة فعالة</li>
                        <li><strong>خطة إدارة بيئية تفصيلية:</strong> مع برنامج مراقبة شامل وخطط طوارئ</li>
                        <li><strong>تقييم التأثيرات التراكمية:</strong> مع المشاريع الصناعية الموجودة في المنطقة</li>
                    </ol>
                    <div style="background: #fff3cd; padding: 15px; border-radius: 10px; margin: 15px 0;">
                        <strong>⏱️ الوقت المتوقع لإعادة التقديم:</strong> 6-12 شهر<br>
                        <strong>💰 التكلفة الإضافية:</strong> 500,000 - 1,000,000 درهم للدراسات الجديدة<br>
                        <strong>🎯 احتمالية الموافقة بعد التعديل:</strong> عالية مع الالتزام بالمتطلبات
                    </div>
                </div>
            `;

            // Performance-based feedback
            if (overall >= 85) {
                feedback += `
                    <div class="info-box">
                        <h4>🌟 تقييم ممتاز!</h4>
                        <p>أظهرت فهماً عميقاً لمعايير مراجعة تقييم الأثر البيئي وأتخذت قرارات مهنية صحيحة. أنت مؤهل للعمل كمراجع بيئي محترف.</p>
                        <ul style="text-align: right; margin: 10px 0;">
                            <li>✅ تحديد دقيق لجميع النواقص الرئيسية</li>
                            <li>✅ قرار مهني صحيح (إرجاع للتعديل)</li>
                            <li>✅ فهم عميق لمتطلبات الدراسات البيئية</li>
                            <li>✅ تقدير واقعي للوقت المطلوب للتحسين</li>
                        </ul>
                    </div>
                `;
            } else if (overall >= 70) {
                feedback += `
                    <div class="info-box">
                        <h4>👍 أداء جيد جداً!</h4>
                        <p>أظهرت فهماً جيداً لمعايير المراجعة مع بعض النواقص البسيطة. مع المزيد من الخبرة ستصبح مراجعاً محترفاً متمكناً.</p>
                    </div>
                `;
            } else if (overall >= 50) {
                feedback += `
                    <div class="warning-box">
                        <h4>⚠️ أداء متوسط - يحتاج تحسين</h4>
                        <p>تحتاج لمراجعة معايير تقييم الأثر البيئي وتطوير مهارات المراجعة المهنية. ركز على فهم أهمية البيانات الأساسية والتقييم الكمي.</p>
                    </div>
                `;
            } else {
                feedback += `
                    <div class="warning-box">
                        <h4>🔄 يحتاج تدريب مكثف</h4>
                        <p>النتيجة تشير إلى الحاجة لتدريب أساسي في مراجعة دراسات تقييم الأثر البيئي. يُنصح بحضور دورات متخصصة ومراجعة المعايير الدولية.</p>
                    </div>
                `;
            }

            feedback += `
                <div class="recommendation-box">
                    <h4>📚 التطوير المهني المقترح:</h4>
                    <ul style="text-align: right; margin: 15px 0; line-height: 1.6;">
                        <li><strong>دراسة معايير هيئة البيئة:</strong> مراجعة شاملة لدليل تقييم الأثر البيئي</li>
                        <li><strong>التدريب على النمذجة:</strong> برامج انتشار الملوثات والضوضاء</li>
                        <li><strong>ورش الاستشارة العامة:</strong> تعلم أفضل الممارسات في إشراك المجتمع</li>
                        <li><strong>حالات دراسية:</strong> مراجعة مشاريع مشابهة ودراسات معتمدة</li>
                        <li><strong>المعايير الدولية:</strong> IFC Performance Standards, World Bank Guidelines</li>
                    </ul>
                </div>
            `;

            return feedback;
        }

        function generateSpecificFeedback(error) {
            const feedbackMap = {
                'baseline_quality': {
                    title: 'جودة البيانات الأساسية',
                    issue: 'جميع البيانات تعاني من نواقص جوهرية',
                    correct: 'يجب رفضها والطلب من جديد (بيانات قديمة + تغطية ناقصة + منهجية ضعيفة)'
                },
                'main_issue': {
                    title: 'المشكلة الرئيسية',
                    issue: 'جميع الجوانب تعاني من مشاكل متعددة',
                    correct: 'البيانات قديمة + تغطية ناقصة + منهجية ضعيفة = جميع ما سبق'
                },
                'impact_assessment': {
                    title: 'تقييم التأثيرات',
                    issue: 'تقييم سطحي بدون منهجية واضحة أو أرقام',
                    correct: 'ضعيف وغير كافي إطلاقاً (لا توجد مصفوفة + لا توجد نمذجة)'
                },
                'cumulative_impact': {
                    title: 'التأثيرات التراكمية',
                    issue: 'تم تجاهل التأثيرات مع المصانع الموجودة',
                    correct: 'لا، تم تجاهلها كلياً رغم وجود مصانع أخرى في المنطقة'
                },
                'methodology': {
                    title: 'المنهجية',
                    issue: 'لا توجد منهجية واضحة أو مراجع علمية',
                    correct: 'غير واضحة أو مفقودة (عبارات عامة فقط)'
                },
                'mitigation_quality': {
                    title: 'تدابير التخفيف',
                    issue: 'جميع التدابير عامة وغير قابلة للتطبيق',
                    correct: 'ضعيفة وعامة جداً (لا توجد تفاصيل أو قياسات)'
                },
                'implementability': {
                    title: 'قابلية التطبيق',
                    issue: 'لا توجد تفاصيل عملية للتنفيذ',
                    correct: 'لا، غير واضحة أو قابلة للقياس (كيف سيتم التنفيذ والمراقبة؟)'
                },
                'consultation_quality': {
                    title: 'الاستشارة العامة',
                    issue: 'عملية شكلية مع مشاكل متعددة',
                    correct: 'ضعيفة وشكلية (إعلان متأخر + مكان بعيد + مشاركة ضعيفة)'
                },
                'public_participation': {
                    title: 'المشاركة العامة',
                    issue: 'فرصة محدودة جداً للمشاركة الفعالة',
                    correct: 'غير كافية أو شكلية (8 أشخاص فقط + عرض معقد بالإنجليزية)'
                },
                'final_decision': {
                    title: 'القرار النهائي',
                    issue: 'لا يمكن الموافقة مع هذه النواقص الجوهرية',
                    correct: 'إرجاع للتعديل الجذري (مشروع كبير + دراسة ضعيفة = مخاطر عالية)'
                },
                'priority_fix': {
                    title: 'أولوية التحسين',
                    issue: 'البيانات الأساسية هي الأساس لكل شيء آخر',
                    correct: 'البيانات الأساسية أولاً (بدونها لا يمكن تقييم صحيح للتأثيرات)'
                },
                'current_approval': {
                    title: 'الموافقة بالوضع الحالي',
                    issue: 'مخاطر عالية جداً مع هذا المستوى من الدراسة',
                    correct: 'لا، يحتاج إعادة إعداد شاملة (مسؤولية مهنية وقانونية)'
                },
                'timeline': {
                    title: 'الجدول الزمني',
                    issue: 'إعادة إعداد شاملة تحتاج وقت طويل',
                    correct: '6-12 شهر (بيانات جديدة + تقييم شامل + استشارة صحيحة)'
                }
            };

            const info = feedbackMap[error.question];
            if (!info) return '';

            return `
                <div style="background: #fff3cd; padding: 15px; margin: 10px 0; border-radius: 10px; border-right: 4px solid #ffc107;">
                    <strong>🔍 ${info.title}:</strong><br>
                    <span style="color: #856404;">❌ ${info.issue}</span><br>
                    <strong style="color: #155724;">✅ الإجابة الصحيحة: ${info.correct}</strong>
                </div>
            `;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            updateProgress();
        });
    </script>
